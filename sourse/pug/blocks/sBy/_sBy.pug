mixin sBy(data)
	// start sBy
	+b.SECTION.sBy.section#sBy&attributes(attributes)
		.container
			+b.section-title
				h2 как купить

			+e.tableWrap
				table 
					thead 
						tr 
							td банк
							td ставка
							td сумма
							td требования
					tbody 
						mixin tr(i,pr,rate,price,year,age)
							tr 
								td(data-title="банк") 
									+pic(`bank-${i}.png`,'','')
								td(data-title="ставка") 
									div
										strong= pr 
										span= rate
								td(data-title="сумма") 
									div
										strong= price 
										span= year
								td(data-title="требования")!= age
